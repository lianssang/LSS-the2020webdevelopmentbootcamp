<%- include('partials/header') %>

<h1>Compose</h1>
<form action="/compose" method="POST">
    <div class="form-group">
        <h4>Title</h4>
        <input type="text" class="form-control" name="postTitle" autocomplete="off">
    </div>
    <div class="form-group">
        <h4>Post</h4>
        <textarea class="form-control" name="postBody" id="" cols="30" rows="10" autocomplete="off"></textarea>
    </div>
    <div class="form-group">
        <button class="btn btn-primary" type="submit" name="button" value="published">Publish</button>
    </div>
</form>

<%- include('partials/footer') %>